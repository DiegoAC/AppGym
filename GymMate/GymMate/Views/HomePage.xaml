<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymMate.Views.HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{DynamicResource Users}" Clicked="OnUsersClicked" Priority="0" Order="Primary" />
        <ToolbarItem Text="⚙️" Clicked="OnSettingsClicked" Priority="1" Order="Primary" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="{DynamicResource HelloWorld}"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="{DynamicResource Welcome}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                x:Name="CounterBtn"
                Text="{DynamicResource ClickMe}"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="{DynamicResource Rest}"
                Clicked="OnRestTimerClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="{DynamicResource Routines}"
                Clicked="OnRoutinesClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="{DynamicResource Sessions}"
                Clicked="OnSessionsClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="{DynamicResource Classes}"
                Clicked="OnClassesClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="{DynamicResource Progress}"
                Clicked="OnProgressClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="{DynamicResource Photos}"
                Clicked="OnPhotosClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="{DynamicResource Feed}"
                Clicked="OnFeedClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
